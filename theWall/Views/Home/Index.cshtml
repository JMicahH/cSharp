@model theWall.Models.Message
@using theWall.Models


@{
    ViewData["Title"] = "The Wall";
}

<div id="header">

    <h2>CodingDojo Wall</h2>
    <div id="nav">
        <span>Welcome, @ViewBag.userFirstName</span>
        <a href="logout">Logout</a>
    </div>
</div>


<div class="container">

    <h4>Post a message</h4>
    <form asp-controller="Home" asp-action="postMessage" method="post">
        <span asp-validation-for="messageContent"></span>
        <input asp-for="messageContent" class="form-control">
        

        <button type="submit" class="btn btn-primary">Post Message</button>
    </form>

<hr>


@Html.Partial("MessagesPartial")

</div>