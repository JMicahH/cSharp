<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/styles.css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">


    <title>Dojodachi</title>
</head>
<body>

    <div id="mycontainer">
    <ul>
        <li>Fullness: @ViewBag.fullness</li>
        <li>Happiness: @ViewBag.happiness</li>
        <li>Meals: @ViewBag.meals</li>
        <li>Energy: @ViewBag.energy</li>
    </ul>


<div id="dachibox">

<img src="~/images/dojodachi.gif">
<br>
<p>@ViewBag.message</p>


</div>

@{
    if(@ViewBag.winOrLose == 1){

                <a href="restart"><button type="button"  class="btn btn-primary" value="RESTART">RESTART</button></a>

    }
    else{
        <a href="feed"><button type="button"  class="btn btn-primary" value="FEED">FEED</button></a>
        <a href="play"><button type="button"  class="btn btn-primary" value="PLAY">PLAY</button></a>
        <a href="work"><button type="button"  class="btn btn-primary" value="WORK">WORK</button></a>
        <a href="sleep"><button type="button"  class="btn btn-primary" value="SLEEP">SLEEP</button></a>

    }
}


</div>



</body>
</html>